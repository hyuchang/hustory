        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6" >
                        <ul class="list-unstyled">
                            <li ng-if="$index <= 7" ng-repeat="item in categories" ng-click="reloadBlog(item.idcategory)" style="cursor: pointer;">
                                {{item.cat_name}}
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6" ng-if="categories.length > 8">
                        <ul class="list-unstyled">
